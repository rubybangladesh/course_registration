<div class="col-md-8 col-md-offset-2">

  <h2>Listing Courses</h2>

  <table class="table table-inverse table-bordered table-striped">
    <thead class="thead-inverse">
    <tr>
      <!--<th colspan="3"></th>-->
      <th>Semester</th>
      <th>Status</th>
      <th>Maximum Credit</th>
      <th></th>
    </tr>
    </thead>

  <tbody>
    <% @semesters.each do |semester| %>
  <tr>
    <td><%= semester.sem_name %></td>
    <td><%= semester.status %></td>
    <td><%= semester.maximum_credit %></td>

    <td class="list_action col-md-2">
      <%= link_to 'Show', semester %>
      <%= link_to 'Edit', edit_semester_path(semester)  %>
      <%= link_to 'Destroy', semester, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Semester', new_semester_path, class: "btn btn-primary"%>
