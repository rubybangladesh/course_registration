<div class="col-md-8 col-md-offset-2">

  <label>
    Current Semester:
    <%= @current_semester.sem_name %>
  </label>

  <h3>Listing Current Courses</h3>

  <table class="table table-inverse table-bordered table-striped">
    <thead class="thead-inverse">
    <tr>
      <!--<th colspan="3"></th>-->
      <th>Course No</th>
      <th>Course Title</th>
      <th>Credit</th>
      <th>Semester</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @current.each do |course| %>
        <tr>
          <td class="col-md-2">
            <%= course.course_no %>
          </td>
          <td class="col-md-2">
            <%= course.course_title %>
          </td>
          <td class="col-md-2">
            <%= course.credit %>
          </td>
          <td class="col-md-2">
            <%= course.semester %>
          </td>
          <td class="list_action col-md-2">
            <%= link_to 'Show', course %>
            <%= link_to 'Edit', edit_course_path(course) %>
            <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>

    <% end %>
    </tbody>
  </table>

